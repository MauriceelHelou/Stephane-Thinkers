{
  "name": "Stephane-Thinkers Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/backend/venv/bin/python",
        "python.linting.enabled": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.python"
        }
      }
    }
  },

  "forwardPorts": [3010, 8010],
  "portsAttributes": {
    "3010": {
      "label": "Frontend (Next.js)",
      "onAutoForward": "notify"
    },
    "8010": {
      "label": "Backend (FastAPI)",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "remoteUser": "vscode",

  "mounts": [
    "source=stephane-thinkers-node-modules,target=/workspace/frontend/node_modules,type=volume",
    "source=stephane-thinkers-venv,target=/workspace/backend/venv,type=volume"
  ]
}
